{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/logger/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "packages/logger/package.json",
        "outputPath": "dist/packages/logger",
        "entryFile": "packages/logger/src/index.ts",
        "tsConfig": "packages/logger/tsconfig.lib.json",
        "compiler": "babel",
        "external": ["typescript"],
        "format": ["cjs", "esm"]
      }
    },
    "publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs logger {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/logger/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/logger"],
      "options": {
        "jestConfig": "packages/logger/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "generate-docs": {
      "executor": "nx:run-commands",
      "outputs": ["apps/documentation/src/api/logger"],
      "options": {
        "command": "node tools/scripts/generate-doc.js --project logger"
      }
    }
  },
  "tags": ["js"]
}
