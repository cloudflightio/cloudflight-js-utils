{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "parserOptions": {
                "project": ["packages/akita-read/tsconfig.*?.json"]
            },
            "rules": {}
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off"
            }
        },
        {
            "files": ["*.spec.ts"],
            "rules": {
                "@typescript-eslint/no-unused-vars": "off"
            }
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
