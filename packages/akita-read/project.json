{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/akita-read/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/akita-read",
                "main": "packages/akita-read/src/index.ts",
                "tsConfig": "packages/akita-read/tsconfig.lib.json",
                "assets": ["packages/akita-read/*.md"]
            }
        },
        "publish": {
            "executor": "@nrwl/workspace:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs akita-read {args.ver} {args.tag}"
            },
            "dependsOn": [
                {
                    "projects": "self",
                    "target": "build"
                }
            ]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/akita-read/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/akita-read"],
            "options": {
                "jestConfig": "packages/akita-read/jest.config.ts",
                "passWithNoTests": true
            }
        }
    },
    "tags": []
}
